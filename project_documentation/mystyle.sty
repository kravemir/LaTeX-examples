\usepackage[a4paper,top=2.5cm,bottom=2.3cm,left=2.0cm,right=1.5cm]{geometry}
\usepackage{enumitem}
\usepackage{fancyhdr}
\usepackage{lastpage}
\usepackage{titling}

% remove numbering/headers/footers from empty pages
\usepackage{emptypage}

% PAGE STYLE
\pagestyle{fancy}
\renewcommand{\chaptermark}[1]{ \markboth{#1}{} }
\renewcommand{\sectionmark}[1]{ \markright{#1}{} }
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}


\fancypagestyle{main}{%
    \fancyhf{}
    \fancyfoot[LE,RO]{\thepage \slash \pageref{LastPage}}
    \fancyfoot[RE]{\small \textit{Miroslav Kravec}}
    \fancyfoot[CE]{\small \@title}
    \fancyfoot[LO]{\small \leftmark}
    \fancyfoot[CO]{\small \rightmark}
}

\fancypagestyle{plain}{ %
	\fancyhf{} % remove everything
	\renewcommand{\headrulewidth}{0pt}
	\renewcommand{\footrulewidth}{0pt}
	\fancyfoot[LE,RO]{\thepage \slash \pageref{LastPage}}
}


